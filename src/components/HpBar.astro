<style>
    .hp-bar-container {
        width: 25px;
        height: 100px;
        border: 2px solid black;
        background-color: grey;
        position: relative;
    }

    .hp-bar {
        width: 100%;
        height: 100%;
        background-color: green;
        position: absolute;
        bottom: 0;
    }

    .hp-bar-flexbox{
        display: flex;
            justify-content: center;
            align-items: center;
            height: 15vh;
            margin: 0;
    }

    .hp-button-container{
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
</style>

<div class="hp-bar-flexbox">
    <div class="hp-bar-container">
        <div class="hp-bar" id="hpBar"></div>
    </div>
    <div class="hp-button-container">
        <button id="decreaseBtn">Decrease HP</button>
        <button id="increaseBtn">Increase HP</button>
    </div>
</div>

<script>
    const hpBar = document.getElementById("hpBar");
    const decreaseBtn = document.getElementById("decreaseBtn");
    const increaseBtn = document.getElementById("increaseBtn");

    let currentHP = 100; // Initial HP (in percentage)

    // Function to update the HP bar
    const updateHPBar = () => {
        currentHP = Math.max(0, currentHP - 1);
        hpBar.style.height = currentHP + "%";
    };

    // Decrease HP by 1%
    decreaseBtn.addEventListener("click", () => {
        updateHPBar();
    });

    // Increase HP by 1%, but not beyond 100%
    increaseBtn.addEventListener("click", () => {
        currentHP = Math.min(100, currentHP + 1);
        hpBar.style.height = currentHP + "%";
    });
</script>